{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto p-6">

    <h1 class="text-2xl font-bold mb-6">Catégories</h1>

    <a href="{{ path('app_category_new') }}" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600 mb-4 inline-block">
        Créer une nouvelle catégorie
    </a>

    <table class="min-w-full divide-y divide-gray-200 bg-white shadow rounded-lg">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-4 py-2 text-left">ID</th>
                <th class="px-4 py-2 text-left">Nom</th>
                <th class="px-4 py-2 text-left">Description</th>
                <th class="px-4 py-2 text-left">Actions</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
            {% for category in categories %}
            <tr class="hover:bg-gray-50">
                <td class="px-4 py-2">{{ category.id }}</td>
                <td class="px-4 py-2">{{ category.name }}</td>
                <td class="px-4 py-2">{{ category.description }}</td>
                <td class="px-4 py-2 flex gap-2">
                    <a href="{{ path('app_category_show', {'id': category.id}) }}" class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600">Voir</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="bg-yellow-500 text-white px-3 py-1 rounded hover:bg-yellow-600">Modifier</a>
                    {{ include('category/_delete_form.html.twig', { 'button_class': 'bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600' }) }}
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4" class="px-4 py-2 text-center text-gray-500">Aucune catégorie trouvée</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}

