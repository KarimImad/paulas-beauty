{% extends 'base.html.twig' %}

{% block title %}Détails de la catégorie{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto p-6">

    <div class="bg-white shadow rounded-lg p-6">
        <h1 class="text-2xl font-bold mb-6">Détails de la catégorie</h1>

        <table class="min-w-full divide-y divide-gray-200 mb-6">
            <tbody class="bg-white divide-y divide-gray-200">
                <tr class="hover:bg-gray-50">
                    <th class="px-4 py-2 text-left font-semibold text-gray-700">Id</th>
                    <td class="px-4 py-2 text-gray-900">{{ category.id }}</td>
                </tr>
                <tr class="hover:bg-gray-50">
                    <th class="px-4 py-2 text-left font-semibold text-gray-700">Nom</th>
                    <td class="px-4 py-2 text-gray-900">{{ category.name }}</td>
                </tr>
                <tr class="hover:bg-gray-50">
                    <th class="px-4 py-2 text-left font-semibold text-gray-700">Description</th>
                    <td class="px-4 py-2 text-gray-900">{{ category.description }}</td>
                </tr>
            </tbody>
        </table>

        <div class="flex gap-4">
            <a href="{{ path('app_category_index') }}" class="bg-gray-200 text-gray-800 px-4 py-2 rounded hover:bg-gray-300">
                Retour à la liste
            </a>
            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
                Modifier
            </a>
            {{ include('category/_delete_form.html.twig', { 'button_class': 'bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600' }) }}
        </div>
    </div>

</div>
{% endblock %}
