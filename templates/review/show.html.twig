{% extends 'base.html.twig' %}

{% block title %}Détails de l'avis{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto p-6">

    <div class="bg-white shadow rounded-lg p-6">
        <h1 class="text-2xl font-bold mb-6">Avis de {{ review.name }}</h1>

        <p class="text-gray-700 mb-2"><span class="font-semibold">Description :</span> {{ review.description }}</p>
        <p class="text-gray-700 mb-2"><span class="font-semibold">Prestation :</span> {{ review.service.name }}</p>
        {# <p class="text-gray-700 mb-2"><span class="font-semibold">Note :</span> {{ review.note }}/5</p> #}
        {# <p class="text-gray-500 text-xs mb-4">Créé le {{ review.createdAt|date('d/m/Y H:i') }}</p> #}

        <div class="flex gap-4">
            <a href="{{ path('app_review_index') }}" class="bg-gray-200 px-4 py-2 rounded hover:bg-gray-300">
                Retour à la liste
            </a>
            <a href="{{ path('app_review_edit', {'id': review.id}) }}" class="bg-yellow-400 px-4 py-2 rounded hover:bg-yellow-500 text-white">
                Modifier
            </a>
            {{ include('review/_delete_form.html.twig', { 'button_class': 'bg-red-500 px-4 py-2 rounded hover:bg-red-600 text-white' }) }}
        </div>
    </div>

</div>
{% endblock %}
