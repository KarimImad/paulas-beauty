{% extends 'base.html.twig' %}

{% block title %}Commandes{% endblock %}

{% block body %}
<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">Toutes les commandes</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {% for order in orders %}
            <div class="bg-white p-4 rounded shadow hover:shadow-lg transition">
                <h2 class="text-xl font-semibold mb-2">{{ order.firstName }} {{ order.lastName }}</h2>
                <p class="text-gray-600 mb-2">{{ order.email }} | {{ order.phone }}</p>
                <p class="text-gray-500 mb-2">Créée le {{ order.createdAt|date('d/m/Y H:i') }}</p>
                <a href="{{ path('app_order_show', {'id': order.id}) }}" class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600">Voir détails</a>
                <a href="{{ path('app_order_delete', {'id': order.id}) }}" class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600">Supprimer</a>
            </div>
        {% else %}
            <p class="text-gray-500">Aucune commande pour le moment.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}

