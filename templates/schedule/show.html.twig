{% extends 'base.html.twig' %}

{% block title %}Schedule{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto mt-10 p-6 bg-white shadow-lg rounded-2xl">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">📅 Schedule Details</h1>

    <div class="overflow-x-auto">
        <table class="w-full text-left border border-gray-200 rounded-lg">
            <tbody class="divide-y divide-gray-200">
                <tr class="hover:bg-gray-50">
                    <th class="px-4 py-3 text-gray-600 font-medium w-1/3">Id</th>
                    <td class="px-4 py-3">{{ schedule.id }}</td>
                </tr>
                <tr class="hover:bg-gray-50">
                    <th class="px-4 py-3 text-gray-600 font-medium">Date</th>
                    <td class="px-4 py-3">
                        {{ schedule.startHour ? schedule.startHour|date('Y-m-d H:i') : '—' }}
                    </td>
                </tr>
                <tr class="hover:bg-gray-50">
                    <th class="px-4 py-3 text-gray-600 font-medium">Start Hour</th>
                    <td class="px-4 py-3">
                        {{ schedule.startHour ? schedule.startHour|date('H:i:s') : '—' }}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="flex gap-3 mt-6">
        <a href="{{ path('app_schedule_index') }}"
           class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 text-sm font-medium rounded-lg transition">
            ← Back to list
        </a>

        <a href="{{ path('app_schedule_edit', {'id': schedule.id}) }}"
           class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition">
            ✏️ Edit
        </a>

        <div>
            {{ include('schedule/_delete_form.html.twig', {
                'attr': {'class': 'inline'}
            }) }}
        </div>
    </div>
</div>
{% endblock %}
