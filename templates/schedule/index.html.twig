{% extends 'base.html.twig' %}

{% block title %}Schedule index{% endblock %}

{% block body %}
    <h1>Schedule index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>StartHour</th>
                <th>EndHour</th>
                <th>IsAvailable</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for schedule in schedules %}
            <tr>
                <td>{{ schedule.id }}</td>
                <td>{{ schedule.date ? schedule.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ schedule.startHour ? schedule.startHour|date('H:i:s') : '' }}</td>
                <td>{{ schedule.endHour ? schedule.endHour|date('H:i:s') : '' }}</td>
                <td>{{ schedule.isAvailable ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_schedule_show', {'id': schedule.id}) }}">show</a>
                    <a href="{{ path('app_schedule_edit', {'id': schedule.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_schedule_new') }}">Create new</a>
{% endblock %}
