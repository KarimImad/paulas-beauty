{% extends 'base.html.twig' %}

{% block title %}Edit Schedule{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto mt-10 p-6 bg-white shadow-lg rounded-2xl">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">✏️ Edit Schedule</h1>

    <div class="mb-6">
        {{ include('schedule/_form.html.twig', {
            button_label: 'Update'
        }) }}
    </div>

    <div class="flex gap-3">
        <a href="{{ path('app_schedule_index') }}"
           class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 text-sm font-medium rounded-lg transition">
            ← Back to list
        </a>

        <div>
            {{ include('schedule/_delete_form.html.twig', {
                'attr': {'class': 'inline'}
            }) }}
        </div>
    </div>
</div>
{% endblock %}
