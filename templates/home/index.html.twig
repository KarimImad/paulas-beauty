{% extends 'base.html.twig' %}

{% block title %}Accueil - Paula's Beauty{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center h-16">
            <div class="flex items-center gap-2 font-bold text-xl">
                <span class="w-3 h-3 rounded-full bg-blue-500"></span> Paula's Beauty
            </div>
            <nav class="flex gap-6">
                <a href="#services" class="text-gray-600 hover:text-gray-900">Prestations</a>
                <a href="#avis" class="text-gray-600 hover:text-gray-900">Avis</a>
                <a href="#contact" class="text-gray-600 hover:text-gray-900">Contact</a>
                <a href="#reservation" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Réserver</a>
            </nav>
        </div>
    </header>

    <!-- Hero -->
    <section class="text-center py-16 px-4">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Onglerie à Gambetta – Réservation en ligne</h1>
        <p class="text-gray-600 text-lg mb-8">Manucure, gel, semi-permanent et nail art. Choisissez votre prestation et un créneau.</p>

    <!-- Services -->
    <section id="services" class="max-w-7xl mx-auto px-4 py-16">
        <h2 class="text-3xl font-bold mb-8 text-center">Nos Prestations</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for service in services %}
            <div class="bg-white shadow rounded-lg overflow-hidden hover:shadow-lg transition">
                <div class="h-48 bg-gradient-to-br from-blue-100 to-blue-50 flex items-end p-4">
                    {# <span class="bg-white text-gray-700 text-sm px-2 py-1 rounded-full">{{ service.duree }} min</span> #}
                </div>
                <div class="p-4 flex flex-col gap-2">
                    <h3 class="font-bold text-lg">{{ service.name }}</h3>
                    <p class="text-gray-600 text-sm">{{ service.description }}</p>
                    <div class="mt-auto flex justify-between items-center">
                        <span class="font-bold text-blue-500">{{ service.price }} €</span>
                        <a href="#reservation" class="bg-blue-500 text-white px-3 py-2 rounded hover:bg-blue-600">Réserver</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </section>

    <!-- Avis -->
    <section id="avis" class="bg-gray-100 py-16 px-4">
        <h2 class="text-3xl font-bold mb-8 text-center">Avis de nos clientes</h2>
        <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6">
            {% for review in reviews %}
            <div class="bg-white p-4 rounded shadow">
                <p class="text-gray-700 mb-2">“{{ review.description }}”</p>
                <p class="font-semibold text-gray-900 text-sm">- {{ review.name }}, {{ review.prestation.name }}</p>
            </div>
            {% endfor %}
        </div>
    </section>

    <!-- Contact / Réservation -->
    <section id="reservation" class="max-w-2xl mx-auto px-4 py-16">
        <h2 class="text-3xl font-bold mb-8 text-center">Réservez votre créneau</h2>
        <form method="post" action="" class="bg-white shadow p-8 rounded flex flex-col gap-4">
            <input type="text" name="prenom" placeholder="Prénom" class="p-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
            <input type="text" name="nom" placeholder="Nom" class="p-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
            <input type="email" name="email" placeholder="Email" class="p-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
            <input type="tel" name="telephone" placeholder="Téléphone" class="p-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
            <select name="service" class="p-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
                {% for service in services %}
                <option value="{{ service.id }}">{{ service.name }} - {{ service.price }} €</option>
                {% endfor %}
            </select>
            <button type="submit" class="bg-blue-500 text-white font-semibold px-4 py-3 rounded hover:bg-blue-600">Réserver</button>
        </form>
    </section>
</div>
{% endblock %}

