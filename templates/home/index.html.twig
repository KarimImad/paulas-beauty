{% extends 'base.html.twig' %}

{% block title %}Accueil - Paula's Beauty{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">

    <!-- Hero -->
    <section class="bg-gradient-to-r from-amber-100 to-amber-200 py-20 text-center px-4">
        <h1 class="text-4xl md:text-5xl font-extrabold text-gray-800 mb-4">Onglerie à Gambetta – Réservation en ligne</h1>
        <p class="text-gray-700 text-lg md:text-xl mb-8">Manucure, gel, semi-permanent et nail art. Choisissez votre prestation et un créneau.</p>
        {# <a href="#services" class="inline-block bg-amber-700 hover:bg-amber-800 text-white font-semibold px-6 py-3 rounded-lg shadow transition">
            Voir les prestations
        </a> #}
    </section>

    <!-- Services -->
    <section id="services" class="max-w-7xl mx-auto px-4 py-16">
        <h2 class="text-3xl font-bold mb-12 text-center text-gray-800">Mes Prestations</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for service in services %}
                <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition overflow-hidden flex flex-col justify-between">
                    <div class="p-6 flex flex-col gap-4 text-center">
                        <h3 class="text-xl font-bold text-gray-800">{{ service.name }}</h3>
                        <p class="text-gray-600 text-sm">{{ service.description }}</p>
                        <p class="text-lg font-semibold text-amber-700">{{ service.price }} €</p>
                    </div>
                    <div class="p-6 text-center">
                        <a href="{{ path('app_select_booking', {'id': service.id}) }}"
                           class="inline-block bg-amber-700 hover:bg-amber-800 text-white font-semibold px-6 py-3 rounded-lg shadow transition">
                           Choisir
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

    <!-- Avis -->
    <section id="avis" class="bg-amber-50 py-16 px-4">
        <h2 class="text-3xl font-bold mb-12 text-center text-gray-800">Avis de nos clientes</h2>
        <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8">
            {% for review in reviews %}
                <div class="bg-white rounded-2xl shadow p-6 flex flex-col gap-3">
                    <p class="text-gray-700 italic">“{{ review.description }}”</p>
                    <p class="font-semibold text-gray-900 text-sm">- {{ review.name }}, {{ review.service.name }}</p>
                </div>
            {% endfor %}
        </div>
    </section>

    <!-- Contact / Réservation -->
    <section id="reservation" class="max-w-3xl mx-auto px-4 py-16">
        <h2 class="text-3xl font-bold mb-8 text-center text-gray-800">Réservez votre créneau</h2>
        <form method="post" action="" class="bg-white shadow-lg rounded-2xl p-8 flex flex-col gap-5">
            <input type="text" name="prenom" placeholder="Prénom" class="p-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-700">
            <input type="text" name="nom" placeholder="Nom" class="p-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-700">
            <input type="email" name="email" placeholder="Email" class="p-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-700">
            <input type="tel" name="telephone" placeholder="Téléphone" class="p-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-700">
            <select name="service" class="p-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-700">
                {% for service in services %}
                    <option value="{{ service.id }}">{{ service.name }} - {{ service.price }} €</option>
                {% endfor %}
            </select>
            <button type="submit" class="bg-amber-700 hover:bg-amber-800 text-white font-semibold px-6 py-4 rounded-lg shadow transition">
                Réserver
            </button>
        </form>
    </section>
</div>
{% endblock %}

