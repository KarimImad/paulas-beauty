{% extends 'base.html.twig' %}

{% block title %}Confirmation - {{ service.name }}{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 px-6 py-10 flex justify-center">
    <div class="bg-white p-8 rounded-2xl shadow-md w-full max-w-lg">
        <h1 class="text-2xl font-bold mb-4">Confirme ta réservation</h1>
        <p class="mb-6 text-gray-600">
            Service : <span class="font-semibold">{{ service.name }}</span><br>
            Créneau : <span class="font-semibold">{{ schedule.startHour|date('H:i') }} le {{ schedule.startHour|format_datetime(locale='fr', pattern='EEEE d MMMM yyyy')|capitalize }}
</span>
        </p>

        <form method="POST">
            <div class="mb-4">
                <label class="block mb-1 font-medium">Prénom</label>
                <input type="text" name="first_name" required
                       class="w-full border rounded-lg px-3 py-2">
            </div>

            <div class="mb-4">
                <label class="block mb-1 font-medium">Nom</label>
                <input type="text" name="last_name" required
                       class="w-full border rounded-lg px-3 py-2">
            </div>

            <div class="mb-4">
                <label class="block mb-1 font-medium">Email</label>
                <input type="email" name="email" required
                       class="w-full border rounded-lg px-3 py-2">
            </div>

            <div class="mb-6">
                <label class="block mb-1 font-medium">Téléphone</label>
                <input type="text" name="phone" required
                       class="w-full border rounded-lg px-3 py-2">
            </div>

            <button type="submit"
                    class="w-full bg-green-500 text-white font-medium py-2 rounded-lg hover:bg-green-600 transition" href="{{ path('app_confirmation', {'scheduleId': schedule.id}) }}">
                Confirmer la réservation
            </button>
        </form>
    </div>
</div>
{% endblock %}
