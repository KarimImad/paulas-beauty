{% extends 'base.html.twig' %}

{% block title %}Détails du service{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto p-6">

    <div class="bg-white shadow rounded-lg p-6">
        <h1 class="text-2xl font-bold mb-6">{{ service.name }}</h1>

        <p class="text-gray-700 mb-2">{{ service.description }}</p>
        <p class="font-bold text-green-600 mb-4">{{ service.price }} €</p>

        <div class="flex gap-4">
            <a href="{{ path('app_service_index') }}" class="bg-gray-200 px-4 py-2 rounded hover:bg-gray-300">
                Retour à la liste
            </a>
            <a href="{{ path('app_service_edit', {'id': service.id}) }}" class="bg-yellow-400 px-4 py-2 rounded hover:bg-yellow-500 text-white">
                Modifier
            </a>
            <form method="post" action="{{ path('app_service_delete', {'id': service.id}) }}" onsubmit="return confirm('Êtes-vous sûr ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
                <button class="bg-red-500 px-4 py-2 rounded hover:bg-red-600 text-white">Supprimer</button>
            </form>
        </div>
    </div>

</div>
{% endblock %}
